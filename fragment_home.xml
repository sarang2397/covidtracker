<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Coronavirus COVID19\nGlobal Cases"

            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="26dp"
            android:gravity="center_horizontal" />




        <TextView
            android:id="@+id/LabelToatalConfirmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TotalConfirmed"
            android:textAlignment="center"
            android:textColor="#fff"
            style="@style/LabelFontStyle"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/TotalConfirmed"
            style="@style/TotalFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:gravity="center_horizontal"
            android:text=""
            android:textAlignment="center"

            android:textColor="@color/colorTotalConfirmed" />


        <TextView
            android:id="@+id/LabelTotalDeath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TotalDeaths"
            android:textAlignment="center"
            style="@style/LabelFontStyle"
            android:textColor="@color/colorTotalDeaths"

            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/TotalDeath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            style="@style/TotalFontStyle"
            android:textColor="@color/colorTotalDeaths"

            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/LabelToatalRecovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TotalRecovered"
            android:textAlignment="center"
            style="@style/LabelFontStyle"
            android:textColor="@color/colorTotalRecovered"

            android:gravity="center_horizontal" />


        <TextView
            android:id="@+id/TotalRecovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            style="@style/TotalFontStyle"
            android:textColor="@color/colorTotalRecovered"

            android:gravity="center_horizontal" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_circular_home"
        android:layout_width="110dp"
        android:layout_height="89dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress" />
</RelativeLayout>





